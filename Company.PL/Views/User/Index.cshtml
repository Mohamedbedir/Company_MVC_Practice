<br />

<h1>All Users</h1>

<br />
<br />
<div class="row justify-content-center align-content-center">
    <form class="row form-group col-8 offset-1">
        <div class="col-8">
            <input type="text" style="background-color :azure" class="form-control " name="email" placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>

</div>
<br />@if (Model.Count() > 0)
{
    <div class="card__container">
        @foreach (var user in Model)
        {
            <div class="card__article">
                
                <div class="card__data">
                    <h3 class="card__name">@user.UserName </h3>
                    <p class="card__description">
                        <strong>First Name:</strong> @user.FName <br />
                        <strong>Last Name:</strong> @user.LName <br />
                        <strong>Email:</strong> @user.Email <br />
                        <strong>Phone:</strong> @user.PhoneNumber<br />
                        <strong>Id:</strong> @user.Id<br />
                        <strong>Role:</strong>@string.Join(",",user.Roles)<br />
                      

                    </p>
                    <div class="card-actions">
                        <a asp-action="details" asp-route-id="@user.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                        -
                        <a asp-action="Edit" asp-route-id="@user.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        -
                        <a asp-action="Delete" asp-route-id="@user.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h1>There is no User </h1>
    </div>
}
