@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
}

<h4 class="alert-danger">Are You Sure You Want To Delete @Model.RoleName Role</h4>
<br />
<br />

<form asp-action="Delete">

    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input class="form-control" asp-for="RoleName" readonly />
    </div>
 

    @*<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a> |*@
    <input type="submit" value="Delete" class="btn btn-danger " />
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
</form>


