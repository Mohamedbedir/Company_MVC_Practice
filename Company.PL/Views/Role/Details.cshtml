@model RoleViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    Details of @Model.RoleName Role
</h1>

<br />
<br />
<div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input class="form-control" asp-for="RoleName" readonly />
    </div>
   

    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Edit</a> |
    <a asp-action="Index" class="btn btn-light">Back To List <i class="fas fa-arrow-right"></i></a>
</div>
